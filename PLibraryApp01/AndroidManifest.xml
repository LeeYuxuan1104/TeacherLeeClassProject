<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plibraryapp01"
    android:versionCode="1"
    android:versionName="1.0" xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk android:minSdkVersion="8" tools:ignore="UsesMinSdkAttributes"/>
    <!-- 01.添加网络的权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 02.访问网络的状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 01.添加蓝牙的使用期限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- 03.Android中写入SDCARD的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 04.文件系统存储的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!--  -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.view.VWelcomeActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="cn.view.VResignActivity" 
            android:theme="@android:style/Theme.NoTitleBar" 
            >
        </activity>
        <activity 
            android:name="cn.view.VMenuActivity" 
            android:theme="@android:style/Theme.NoTitleBar" 
            >
        </activity>
        <activity 
            android:name="cn.view.VUserinfoActivity" 
            android:theme="@android:style/Theme.NoTitleBar" 
            >
        </activity>
        <activity 
            android:name="cn.view.VKindinfoActivity" 
            android:theme="@android:style/Theme.NoTitleBar" 
            >
        </activity>
        <activity 
            android:name="cn.view.VIteminfoActivity" 
            android:theme="@android:style/Theme.NoTitleBar" 
            >
        </activity>
        <activity 
            android:name="cn.view.VBorrowinfoActivity" 
            android:theme="@android:style/Theme.NoTitleBar" 
            >
        </activity>
        <activity 
            android:name="cn.view.VStateinfoActivity" 
            android:theme="@android:style/Theme.NoTitleBar" 
            >
        </activity>
    </application>

</manifest>